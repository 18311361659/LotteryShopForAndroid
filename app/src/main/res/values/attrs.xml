<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TopTitleBar -->
    <declare-styleable name="TopBar">
        <attr name="leftSrc" format="reference" />
        <attr name="leftTopText" format="string" />
        <attr name="centerText" format="string" />
        <attr name="rightTopText" format="string" />
        <attr name="rightSrc" format="reference" />

        <attr name="warnSrc" format="reference" />
        <attr name="isShowPrice" format="boolean"/>
        <attr name="isShowMessage" format="boolean" />
        <attr name="isShowWarn" format="boolean" />
        <attr name="isShowLeft" format="boolean" />
        <attr name="isShowLeftText" format="boolean" />
        <attr name="isShowRightText" format="boolean" />
        <attr name="isShowRight" format="boolean" />

        <attr name="isBack" format="boolean" />

        <attr name="centerTextSize" format="dimension" />
        <attr name="centerTextColor" format="color" />
    </declare-styleable>
    <!--时间轴-->
    <declare-styleable name="TimeLineView">
        <attr name="timelineRadius" format="dimension" />
        <attr name="timelineHeadRadius" format="dimension" />
        <attr name="timelineHeadColor" format="color" />
        <attr name="timelineOtherColor" format="color" />
        <attr name="timelineRadiusDistance" format="dimension" />
        <attr name="timelineCount" format="integer" />
        <attr name="timelineMarginTop" format="dimension" />
        <attr name="timelineWidth" format="dimension" />
    </declare-styleable>
    //购物车加减按钮
    <declare-styleable name="NumberButton">
        <attr name="editable" format="boolean" />
        <attr name="buttonWidth" format="dimension" />
        <attr name="textWidth" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
    </declare-styleable>
    //物流view
    <declare-styleable name="LogisticsInformationView">
        <attr name="width" format="dimension"/>
        <attr name="radius" format="dimension"/>
    </declare-styleable>

</resources>