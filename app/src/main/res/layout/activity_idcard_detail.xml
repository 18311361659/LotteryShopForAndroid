<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_idcard_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.jiuyuhulian.lotteryshop.function.BankDetailActivity">

    <com.jiuyuhulian.lotteryshop.view.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="145px"
        android:background="@color/white"
        app:centerText="银行卡详情"
        app:centerTextColor="@color/three"
        app:centerTextSize="54px"
        app:isShowLeft="true"
        app:leftSrc="@drawable/xgmm_return"
        app:isShowRight="true"
        app:rightSrc="@drawable/yhkxq_more">

    </com.jiuyuhulian.lotteryshop.view.TopBar>

    <ImageView
        android:id="@+id/bankImg"
        android:layout_width="110px"
        android:layout_height="110px"
        android:src="@drawable/yhkxq_logo"
        android:layout_marginTop="60px"/>

    <TextView
        android:id="@+id/bankName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32px"
        android:textSize="38px"
        android:text="交通银行储蓄卡"
        android:textColor="@color/bank_color"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bank_color"
            android:text="**** **** **** "
            android:gravity="center_vertical"
            android:textSize="40px"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bankNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:text="4988"
            android:gravity="center_vertical"
            android:textColor="@color/bank_color"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/limitView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:orientation="vertical"
         android:paddingTop="26px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:background="@drawable/yhkxq_blue_bj">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bank_pay"
            android:textSize="32px"
            android:text="银行卡支付限额"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/yhkxq_fgx"
            android:layout_marginTop="26px"
            ></View>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px">

            <TextView
                android:id="@+id/singe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥10000"
                android:textSize="38px"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单笔限额"
                android:textSize="38px"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView3" />
        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:layout_marginBottom="40px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每日限额"
                android:textSize="38px"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥10000"
                android:textSize="38px"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
