<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.jiuyuhulian.lotteryshop.view.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="145px"
        android:background="@color/white"
        app:centerText="彩票激活"
        app:leftSrc="@drawable/xgmm_return"
        app:isShowLeft="true"
        app:centerTextColor="@color/three"
        app:centerTextSize="54px"></com.jiuyuhulian.lotteryshop.view.TopBar>



        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/scan_arl"
            android:layout_width="824px"
            android:layout_height="120px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/cpjh_anniu_bj"
            android:gravity="center_vertical"
            android:layout_marginTop="70px"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cpjh_sm"
                android:paddingLeft="44px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="46px"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingLeft="44px"
                android:text="扫码激活"/>
        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/hand_arl"
            android:layout_width="824px"
            android:layout_height="120px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/cpjh_anniu_bj"
            android:gravity="center_vertical"
            android:layout_marginTop="44px"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cpjh_shuru"
                android:paddingLeft="44px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="44px"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingLeft="46px"
                android:text="输入票号激活"/>
        </com.zhy.autolayout.AutoRelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270px"
        android:src="@drawable/cpjh_syt"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="540px"
            android:textColor="@color/three"
            android:textSize="42px"
            android:text="彩票票号"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="876px"
            android:textColor="@color/three"
            android:textSize="42px"
            android:text="二维码"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
