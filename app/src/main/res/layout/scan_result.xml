<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scan_result_rel"
    android:layout_width="860px"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/layout_border_shape"
    android:paddingBottom="56px">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="32px"
        android:paddingTop="32px"
        android:src="@drawable/tuichu" />

  <!--  <ImageView
        android:layout_width="860px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188px"
        android:scaleType="fitXY"
        android:src="@drawable/jsj_light_line" />-->

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

  <!--      <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="68px"
            />-->

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="98px"
            android:textSize="70px"
            android:text="恭喜您"
            android:textColor="@color/three" />

        <TextView
            android:id="@+id/tv_scanDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52px"
            android:text=""
            android:textSize="40px"
            android:textColor="@color/three"  />

        <TextView
            android:id="@+id/tv_encashDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24px"
            android:textSize="40px"
            android:textColor="@color/three" />

        <ImageView
            android:id="@+id/iv_prize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chatu"
            android:layout_marginTop="34px"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/iv_ok"
            android:layout_width="576px"
            android:layout_height="115px"
            android:text="继续"
            android:textColor="@color/white"
            android:textSize="52px"
            android:layout_marginTop="20px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/sddj_an_beijing" />


    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
