<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/updatPwd_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.jiuyuhulian.lotteryshop.function.VerifyPayPwdActivity">

    <com.jiuyuhulian.lotteryshop.view.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="145px"
        android:background="@color/white"
        app:centerText="验证财务安全码"
        app:centerTextColor="@color/three"
        app:centerTextSize="54px"
        app:isShowLeft="true"
        app:leftSrc="@drawable/xgmm_return">

    </com.jiuyuhulian.lotteryshop.view.TopBar>

    <TextView
        android:id="@+id/tv_saftyPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300px"
        android:text="请输入财务安全码，以验证身份"
        android:textColor="@color/three"
        android:textSize="36px"
        android:visibility="visible" />

    <EditText
        android:id="@+id/et_saftyPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125px"
        android:layout_marginRight="125px"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:background="@null"
        android:inputType="textPassword"
        android:imeOptions="actionGo" />
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/btn_orange"
        android:layout_marginLeft="125px"
        android:layout_marginRight="125px">

    </View>


</com.zhy.autolayout.AutoLinearLayout>
