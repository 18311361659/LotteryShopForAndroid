<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiuyuhulian.lotteryshop.activity.RegistActivity">
    <ScrollView
        android:id="@+id/login_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"

      >

    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250px"
        android:src="@drawable/tclogo" />

    <EditText
        android:id="@+id/et_shop_id"
        android:layout_width="840px"
        android:layout_height="124px"
        android:layout_marginTop="276px"
        android:background="@drawable/login_beijing"
        android:drawableLeft="@drawable/login_mdbh"
        android:drawablePadding="30px"
        android:paddingLeft="46px"
        android:gravity="center_vertical"
        android:textSize="50px"
        android:inputType="phone"
        android:hint="门店编号"
        android:textColor="@color/nine" />


        <EditText
            android:id="@+id/et_operator"
            android:layout_width="840px"
            android:layout_height="124px"
            android:layout_marginTop="50px"
            android:background="@drawable/login_beijing"
            android:drawableLeft="@drawable/admin"
            android:drawablePadding="30px"
            android:hint="操作员编号"
            android:paddingLeft="46px"
            android:gravity="center_vertical"
            android:textSize="50px"
            android:inputType="phone"
            android:textColor="@color/nine" />

        <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="840px"
        android:layout_height="124px"
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:background="@drawable/login_beijing">
        <EditText
            android:id="@+id/et_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/mima"
            android:drawablePadding="30px"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:paddingLeft="46px"
            android:textSize="50px"
            android:gravity="center_vertical"
            android:textColor="@color/nine"
            android:background="@null"/>
        <ImageView
            android:id="@+id/iv_Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tx_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:visibility="invisible"
            />
    </com.zhy.autolayout.AutoRelativeLayout>



    <Button
        android:id="@+id/btn_login"
        android:layout_width="840px"
        android:layout_height="122px"
        android:layout_marginTop="70px"
        android:background="@drawable/beijing_denglu"
        android:paddingBottom="38px"
        android:paddingTop="26px"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="60px" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
   >

        <TextView
            android:id="@+id/fastRegist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="258px"
            android:text="快速注册"
            android:paddingBottom="40px"
            android:paddingRight="40px"
            android:paddingLeft="40px"
            android:textColor="@color/six"
            android:textSize="36px" />

        <TextView
            android:id="@+id/fogotPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="258px"
            android:text="忘记密码"
            android:textColor="@color/six"
            android:textSize="36px"
            android:paddingBottom="40px"
            android:paddingRight="40px"
            android:paddingLeft="40px"
            android:layout_alignParentTop="true"
            android:layout_marginStart="97dp" />
    </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>



    <ScrollView
        android:id="@+id/regist_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="740px"
                android:layout_height="108px"
                android:layout_marginTop="278px"
                android:drawableLeft="@drawable/admin"
                android:hint="请输入店主姓名"
                android:drawablePadding="23px"
                android:paddingLeft="38px"
                android:textSize="41px"
                android:background="@drawable/beijing"/>

            <EditText
                android:id="@+id/et_idcard"
                android:layout_width="740px"
                android:layout_height="108px"
                android:layout_marginTop="48px"
                android:drawableLeft="@drawable/idcard"
                android:hint="请输入店主身份证号"
                android:drawablePadding="23px"
                android:paddingLeft="38px"
                android:textSize="41px"
                android:inputType="number"
                android:background="@drawable/beijing"/>
            <EditText
                android:id="@+id/regist_et_phone"
                android:layout_width="740px"
                android:layout_height="108px"
                android:layout_marginTop="48px"
                android:drawableLeft="@drawable/rg_phone"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:drawablePadding="23px"
                android:paddingLeft="38px"
                android:textSize="41px"
                android:background="@drawable/beijing"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="740px"
                android:layout_height="108px"
                android:layout_marginTop="48px"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="400px"
                    android:layout_height="108px"
                    android:drawableLeft="@drawable/yzm"
                    android:hint="输入验证码"
                    android:drawablePadding="23px"
                    android:paddingLeft="38px"
                    android:textSize="41px"
                    android:inputType="number"
                    android:background="@drawable/yanzhengma_beijing"
                    android:layout_gravity="left"
                    />

                <Button
                    android:id="@+id/btn_code"
                    android:layout_width="284px"
                    android:layout_height="108px"
                    android:text="获取验证码"
                    android:textSize="42px"
                    android:layout_marginLeft="58px"
                    android:textColor="@color/white"
                    android:background="@drawable/yzm_beijing"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/et_adress"
                android:layout_width="740px"
                android:layout_height="108px"
                android:layout_marginTop="48px"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/dizhi"
                android:drawablePadding="23px"
                android:paddingLeft="38px"
                android:textSize="42px"
                android:paddingRight="45px"
                android:hint="请选择地址"
                android:drawableRight="@drawable/enter"
                android:background="@drawable/beijing"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="740px"
                android:layout_height="108px"
                android:layout_marginTop="48px"
                android:gravity="center_vertical"
                android:background="@drawable/beijing">
                <EditText
                    android:id="@+id/regist_et_login_pwd"
                    android:layout_width="740px"
                    android:layout_height="108px"
                    android:drawableLeft="@drawable/denglu_mima"
                    android:hint="请设置登录密码"
                    android:inputType="textPassword"
                    android:drawablePadding="23px"
                    android:paddingLeft="38px"
                    android:textSize="42px"
                    android:background="@null"
                    />
                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:visibility="invisible"
                    android:src="@drawable/tx_delete"/>
            </com.zhy.autolayout.AutoRelativeLayout>


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="740px"
                android:layout_height="108px"
                android:layout_marginTop="48px"
                android:background="@drawable/beijing">
                <EditText
                    android:id="@+id/et_saftyPwd"
                    android:layout_width="740px"
                    android:layout_height="108px"
                    android:drawableLeft="@drawable/anquan_mima"
                    android:hint="请设置财务安全密码"
                    android:drawablePadding="23px"
                    android:inputType="textPassword"
                    android:paddingLeft="38px"
                    android:textSize="42px"
                    android:background="@null"
                    />
                <ImageView
                    android:id="@+id/delete_safty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:visibility="invisible"
                    android:src="@drawable/tx_delete"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <Button
                android:id="@+id/btn_rg"
                android:layout_width="740px"
                android:layout_height="108px"
                android:layout_marginTop="60px"
                android:text="注册"
                android:textSize="53px"
                android:textColor="@color/white"
                android:background="@drawable/regist_bg"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/regist_btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32px"
                android:clickable="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="33px"
                    android:textColor="@color/six"
                    android:text="已有账号？"
                    android:paddingBottom="40px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="33px"
                    android:text="马上登录"
                    android:textColor="@color/btn_orange"
                    android:paddingBottom="40px"

                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
    <ScrollView
        android:id="@+id/forget_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="260px"
                android:src="@drawable/tclogo" />

            <EditText
                android:id="@+id/tv_phone"
                android:layout_width="740px"
                android:layout_height="108px"
                android:layout_marginTop="215px"
                android:background="@drawable/forgepwd_bg"
                android:drawablePadding="22px"
                android:drawableLeft="@drawable/wangjimima_phone"
                android:paddingBottom="18px"
                android:paddingLeft="38px"
                android:paddingTop="18px"
                android:inputType="phone"
                android:hint="请输入手机号"
                android:textColor="@color/nine"
                android:textSize="41px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="740px"
                android:layout_height="108px"
                android:layout_marginTop="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/forget_et_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/wangjimima_yanzhengma_beijing"
                    android:drawableLeft="@drawable/wangjimima_yzm"
                    android:drawablePadding="22px"
                    android:hint="输入验证码"
                    android:inputType="number"
                    android:paddingBottom="18px"
                    android:paddingLeft="38px"
                    android:paddingTop="18px"
                    android:textColor="@color/nine"
                    android:textSize="41px" />

                <Button
                    android:id="@+id/btn_getCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60px"
                    android:background="@drawable/wangjimima_fasongyanzhengma_beijing"
                    android:text="发送验证码"
                    android:textColor="@color/white"
                    android:textSize="41px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="740px"
                android:layout_height="108px"
                android:layout_marginTop="30px"
                android:background="@drawable/forgepwd_bg"
                android:drawableLeft="@drawable/wangjimima_mima"
                android:drawablePadding="22px"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingBottom="18px"
                android:paddingLeft="38px"
                android:paddingTop="18px"
                android:textColor="@color/nine"
                android:textSize="41px" />

            <EditText
                android:id="@+id/et_pwdConfirm"
                android:layout_width="740px"
                android:layout_height="108px"
                android:layout_marginTop="30px"
                android:background="@drawable/forgepwd_bg"
                android:drawableLeft="@drawable/wangjimima_mima"
                android:drawablePadding="22px"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:paddingBottom="18px"
                android:paddingLeft="38px"
                android:paddingTop="18px"
                android:textColor="@color/nine"
                android:textSize="41px" />


            <Button
                android:id="@+id/btn_findPwd"
                android:layout_width="740px"
                android:layout_height="108px"
                android:layout_marginTop="60px"
                android:background="@drawable/wangjimima_querenzhaohui_beijing"
                android:text="确认找回"
                android:textColor="@color/white"
                android:textSize="53px" />

            <TextView
                android:id="@+id/forget_btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:background="@null"
                android:text="立即登录"
                android:paddingBottom="40px"
                android:paddingRight="40px"
                android:paddingLeft="40px"
                android:textColor="@color/six"
                android:textSize="33px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
