<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/jcp_white_bj"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/lottery_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/img"
            android:layout_marginTop="10dp"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:src="@drawable/zhanwei" />


        <TextView
            android:id="@+id/ticket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img"
            android:layout_below="@id/img"
            android:layout_marginTop="10dp"
            android:text="黑珍珠"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img"
            android:layout_alignStart="@+id/ticket_name"
            android:layout_below="@id/ticket_name"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_orange"
                android:gravity="center"
                android:text="￥元" />

            <ImageView
                android:id="@+id/add_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/jcp_nrq_gwc"
                android:text="购物车"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/enter_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/jcp_huobao"
        />

</FrameLayout>
