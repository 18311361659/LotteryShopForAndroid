<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_exchange_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    tools:context="com.jiuyuhulian.lotteryshop.function.ExchangeDetailActivity">

    <com.jiuyuhulian.lotteryshop.view.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="145px"
        app:centerTextSize="54px"
        app:isShowLeft="true"
        app:centerText="兑奖明细"
        app:leftSrc="@drawable/xgmm_return"
        app:centerTextColor="@color/three"
        android:background="@color/white"
        >
    </com.jiuyuhulian.lotteryshop.view.TopBar>

    <EditText
        android:id="@+id/et_search"
        android:layout_width="1008px"
        android:layout_height="87px"
        android:layout_marginTop="14px"
        android:layout_marginBottom="14px"
        android:drawableLeft="@drawable/djmx_icon"
        android:paddingLeft="304px"
        android:drawablePadding="20px"
        android:textColor="@color/nine"
        android:textSize="34px"
        android:background="@drawable/djmx_ssk"
        android:hint="请输入你要搜索的彩票" />
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/rv_exchange_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.jcodecraeer.xrecyclerview.XRecyclerView>
</com.zhy.autolayout.AutoLinearLayout>
