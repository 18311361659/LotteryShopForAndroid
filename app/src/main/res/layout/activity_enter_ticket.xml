<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_enter_ticket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/updatPwd_bg"
    tools:context="com.jiuyuhulian.lotteryshop.function.EnterTicketActivity">

    <com.jiuyuhulian.lotteryshop.view.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="145px"
        android:background="@color/white"
        app:centerText="进彩票"
        app:centerTextColor="@color/three"
        app:centerTextSize="54px"
        app:isShowLeft="true"
        app:isShowRight="true"
        app:rightSrc="@drawable/jcp_gwc_yixuan"
        app:leftSrc="@drawable/xgmm_return">

    </com.jiuyuhulian.lotteryshop.view.TopBar>

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="87px"
        android:layout_marginTop="16px"
        android:layout_marginBottom="16px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:drawableLeft="@drawable/ss_icon"
        android:paddingLeft="304px"
        android:drawablePadding="20px"
        android:textColor="@color/nine"
        android:textSize="36px"
        android:background="@drawable/jcp_white"
        android:hint="请输入你要搜索的彩票"
        android:visibility="gone"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="120px"
        app:tabIndicatorColor="@color/order_tabSelect"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/order_tabSelect"
        app:tabTextColor="#000000">

    </android.support.design.widget.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/wddd_fgx">

    </View>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>


</com.zhy.autolayout.AutoLinearLayout>
